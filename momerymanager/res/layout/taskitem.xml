<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/taskname"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/tasknamev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FFFFFF00"
            android:textSize="13dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_bas_activity"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/t_bas_activityv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FF3FFF00"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_top_activity"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/t_top_activityv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FF3FFF00"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_num_activity"
             android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/t_num_activityv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3FFF00"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_num_running"
             android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/t_num_runningv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3FFF00"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_description"
             android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/t_descriptionv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3FFF00"
            android:textSize="12dip" />
    </LinearLayout>

</LinearLayout>